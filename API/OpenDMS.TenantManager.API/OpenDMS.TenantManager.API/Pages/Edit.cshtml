@page
@model EditModel
@{
    ViewData["Title"] = "Home page";
    Layout = "_dialog";
}
<style>
    h2
    {
        font-size:1.4em;
    }
    .card
    {
        border:none;
        padding:0;
        margin: 0;
        margin-bottom: 24px;
    }
    .Row 
    {
        min-height:32px;
        margin:4px 0;
        display:flex;
        flex-direction:row;
        border-bottom: 1px dotted #ddd;
    }
    .Row label {
        display:flex;
        min-width:30%;
        max-width: 100px;
        overflow: hidden;
        text-overflow:ellipsis;
    }

    .Row span {
            display: flex;
            min-width: max(70%, 100px);
        max-width: 70%;
        overflow: hidden;
        text-overflow: ellipsis;
    }

        .Row span *
            {
            display:flex;
            flex-grow:1;
        }

            .Row span input[type=checkbox] {
                display: inline;
                flex-grow: 0;
            }

</style>
@if (ViewData["Refresh"] == "true")
{
    <script>
        window.parent.location.reload();
    </script>
}
<h1><i class="fa fa-pencil"></i> @Model.tenant.Description (@Model.tenant.Id)</h1>
<div style="position:relative">

    <form method="Post" style="width:100%">
        @if (!String.IsNullOrEmpty(Model.Error))
        {
            <div class="alert alert-danger">@Model.Error</div>
        }

        <div style="margin-bottom:10px;">
            <h2>Dati Generali</h2>
            <div class="card">
                <div class="Row">
                    <label>Identificativo</label>
                    <span><input readonly name="Id" value="@Model.tenant.Id" /> </span>
                </div>
                <div class="Row">
                    <label>Descrizione</label>
                    <span><input name="Description" value="@Model.tenant.Description" /> </span>
                </div>
                <div class="Row">
                    <label>URL</label>
                    <span><input name="URL" value="@Model.tenant.URL" /> </span>
                </div>
                <div class="Row">
                    <label>Offline</label>
                    <span><input type="checkbox" name="Offline" value="true" @(!Model.tenant.Offline ? "":"checked") /> </span>
                </div>
            </div>
  @*          <h2>Storage
                <small>Spazio disco dedicato al tenant per configurazioni, dati, documenti </small>
            </h2>
            <div class="Row">
                <label>Cartella Dedicata</label>
                <span><input name="URL" value="@Model.tenant.RootFolder" />  </span>
            </div>*@
            @*            <h2>Identity Access Manager</h2>
            <div class="card">
                <div class="Row">
                    <label>Realm</label>
                    <span><input name="Realm" value="@Model.tenant.Realm" /> </span>
                </div>
                <div class="Row">
                    <label>Client Id</label>
                    <span><input name="ClientId" value="@Model.tenant.ClientId" /> </span>
                </div>
                <div class="Row">
                    <label>Client Secret</label>
                    <span><input name="ClientSecret" value="@Model.tenant.ClientSecret" /> </span>
                </div>
            </div>*@
        </div>

        <div style="margin-bottom:20px">
            <button type="submit" class="btn btn-success">Memorizza</button>
            <a href="/NewTenant" class="btn btn-light">Annulla</a>
        </div>
    </form>

</div>