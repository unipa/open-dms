@using System.Security.Principal

<ul class="navbar-nav">
@if (User.Identity?.IsAuthenticated == true)
{
        <span class="navbar-text text-dark">Ciao @(((System.Security.Claims.ClaimsIdentity)User.Identity).Claims.FirstOrDefault(c=>c.Type=="preferred_username").Value)!</span>
        <li class="nav-item">
            <a class="nav-link text-dark" href="http://localhost:8080/realms/test/protocol/openid-connect/logout">Sign out</a>
        </li>
}
else
{
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="SignIn">Sign in</a>
        </li>
}
</ul>

@*asp-area="MicrosoftIdentity" *@